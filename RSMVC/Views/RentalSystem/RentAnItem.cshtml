@model RentalInfoSystem

@{ Layout = "_Layout";
    var userdata = (UserDto)TempData["mydata"];
}
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: left;
        font-family: arial;
        margin-top: 50px;
    }
    .card2 {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin: auto;
        text-align: left;
        font-family: arial;
        margin-top: 50px;
        margin-left: 20px;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        margin: 10px;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
        
        
    }

    #texts {
        font-size: 12px;
        text-align: center;
        background-color: dodgerblue;
        color: white;
        padding: 10px 0 10px 0;
    }

    button:hover, a:hover {
        opacity: 0.7;
    }
</style>

